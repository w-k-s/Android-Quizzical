<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#77181a"
                android:gradientRadius="75%"
                android:startColor="#9e2023"
                android:type="radial"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/ic_quizzical"
        android:gravity="center" />
    <item
        android:width="@dimen/splash_asfour_logo_width"
        android:height="@dimen/splash_asfour_logo_height"
        android:bottom="@dimen/splash_asfour_logo_bottom_offset"
        android:gravity="center_horizontal|bottom">
        <bitmap
            android:src="@drawable/logo_asfour"
            />
    </item>
</layer-list>